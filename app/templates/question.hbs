{{#if isEditing}}

  <form>

    <div class="form-group">
      <label for="name">Duckster Name:</label>
      {{input id="name" value=model.name class="form-control"}}
      <label for="body">Joke:</label>
      {{textarea rows="10" id="body" value=model.body class="form-control" placeholder="Make sure not to include the answer to your joke"}}


    </div>

      <button class="btn btn-success" {{action "save" model}}>Submit</button>
  </form>

{{else}}

<div class="jumbotron">
  <h2>{{model.body}}</h2>
  <h4>by {{model.name}}</h4>
  <br>
  <button class="btn btn-default btn-xs" {{action "edit"}}>Edit Joke</button>
  <button class="btn btn-default btn-xs" {{action "delete"}}>Delete Joke</button>
</div>

{{/if}}

<div class="row">

  <div class="col-md-4 col-md-offset-1">
    <ul class="answer-links">
      {{#each answer in model.answers}}
        <li class="list-group-item">{{answer.text}} on {{answer.date}}</li>

      {{/each}}
    </ul>
  </div>
  <p>{{#link-to "new-answer" classNames="btn btn-default btn-lg newAnswer"}}Your Answer To The Joke{{/link-to}}</p>


  <div class="col-md-3">
    <br><br>
    {{outlet "new-answer"}}

  </div>
</div>
