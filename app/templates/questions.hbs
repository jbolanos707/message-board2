<div class="container">
  <div class="jumbotron">
    <h1> Board 2 </h1>
  </div>


  <h2> Welcome to the Community Board</h2>
  <br>
  <div class="row">
    <div class="col-md-5 well">
      <ul class="list-unstyled">
        <h3> Questions</h3>
        {{#each question in model}}

          <li>{{#link-to "question" question.id}}{{question.body}} by {{question.name}}{{/link-to}}</li>

        {{/each}}
      </ul>
    </div>
  </div>


  <hr>
  <div class="row">
    <div class="col-md-2 col-md-offset-1">

      <p>{{#link-to "new-question"}}Post a new question{{/link-to}}</p>

    </div>
    <div class="col-md-4 col-md-offset-3">

      {{outlet "new-question"}}
    </div>
  </div>
</div>
